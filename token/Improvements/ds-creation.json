{
  "size-radio-button": {
    "circumfrence": {
      "value": "{base}*6",
      "type": "sizing"
    }
  },
  "label": {
    "default": {
      "value": {
        "fontFamily": "{ff-main}",
        "fontWeight": "{fw-base}",
        "lineHeight": "{form-height}",
        "fontSize": "{fs-md}",
        "textDecoration": "{default}"
      },
      "type": "typography",
      "description": "Minor Adjustment to line height"
    }
  },
  "toggle": {
    "componenet-wrapper": {
      "value": {
        "height": "{form-height}"
      },
      "type": "composition"
    }
  },
  "form-height": {
    "value": "{base}*7",
    "type": "dimension"
  },
  "radio": {
    "component-wrapper": {
      "value": {
        "height": "{form-height}"
      },
      "type": "composition"
    }
  },
  "checkbox": {
    "componenet-wrapper": {
      "value": {
        "height": "{form-height}"
      },
      "type": "composition"
    }
  },
  "select": {
    "option-container": {
      "selected": {
        "value": {
          "fill": "{fg.form-elem.active}",
          "verticalPadding": "{select.padding.vertical}",
          "horizontalPadding": "{select.padding.horizontal}"
        },
        "type": "composition"
      },
      "icon": {
        "value": {
          "height": "{size-select.icon-height}",
          "width": "{size-select.icon-height}",
          "opacity": "1"
        },
        "type": "composition"
      }
    },
    "icon": {
      "check-hover": {
        "value": {
          "color": "{fg.text.inverted}",
          "width": "{bw.med}",
          "style": "solid"
        },
        "type": "border"
      }
    },
    "text": {
      "option": {
        "selected": {
          "value": {
            "typography": "{label.default}",
            "fill": "{fg.text.inverted}"
          },
          "type": "composition"
        }
      }
    },
    "padding": {
      "vertical": {
        "value": "{base}*3",
        "type": "spacing"
      },
      "horizontal": {
        "value": "{base}*4",
        "type": "spacing"
      }
    }
  },
  "br-checkbox": {
    "value": "0",
    "type": "borderRadius"
  },
  "size-checkbox": {
    "width": {
      "value": "{form-height}",
      "type": "sizing"
    },
    "icon": {
      "value": "{base}*5",
      "type": "sizing"
    }
  }
}